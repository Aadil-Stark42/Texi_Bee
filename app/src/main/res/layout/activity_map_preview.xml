<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_white"
        android:orientation="vertical"
        tools:context=".activitys.dashboard.pricecals.MapPreviewActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardlocationpreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardElevation="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar_included" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@color/view_grey6" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_circle_location" />

                        <LinearLayout
                            android:id="@+id/line1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"

                            android:orientation="vertical">

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:background="@color/view_grey6" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@color/view_grey6" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@color/view_grey6" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@color/view_grey6" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@color/view_grey6" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@color/view_grey6" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"

                                android:src="@drawable/ic_fill_circle_location" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/line2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:background="@color/view_grey6" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@color/view_grey6" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@color/view_grey6" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@color/view_grey6" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@color/view_grey6" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:src="@drawable/ic_location_vc" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/field_border"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:padding="@dimen/_8sdp"
                            android:text="Birkweg"
                            android:textColor="@color/view_black"
                            android:textSize="@dimen/_11ssp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/field_border"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_medium"

                            android:padding="@dimen/_8sdp"
                            android:text="Leimbach"
                            android:textColor="@color/view_black"
                            android:textSize="@dimen/_11ssp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/field_border"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:padding="@dimen/_8sdp"
                            android:text="MozartstraÃŸe"
                            android:textColor="@color/view_black"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cardlocationpreview"
            tools:context=".MapsActivity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_dialog"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_30sdp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:text="@string/estimated_price"
                android:textColor="@color/view_grey"
                android:textSize="@dimen/_11ssp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/poppins_black"
                android:includeFontPadding="false"
                android:text="CHF 42"
                android:textColor="@color/view_main_color"
                android:textSize="@dimen/_25ssp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/circlecorner"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_vc"
                        app:tint="@color/view_grey" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="21 KM"
                        android:textColor="@color/view_grey"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_clock"
                        app:tint="@color/view_grey" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="22 min"
                        android:textColor="@color/view_grey"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</layout>
