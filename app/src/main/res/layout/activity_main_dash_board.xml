<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        tools:context=".activitys.dashboard.MainDashBoardActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/city_bee_text_logo" />


                <!--  <com.mindnotix.citybee.views.GradientTextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/_10sdp"
                      android:layout_marginTop="@dimen/_3sdp"
                      android:fontFamily="@font/poppins_bold"
                      android:includeFontPadding="false"
                      android:text="@string/app_name"
                      android:textColor="@color/black"
                      android:textSize="@dimen/_22ssp"
                      android:textStyle="bold"
                      app:gt_color_list="@array/titlegrediant"
                      app:gt_gradient_direction="up" />
      -->

            </LinearLayout>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="@dimen/_1sdp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/circle_bg"
                                    android:backgroundTint="@color/view_grey5">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="@dimen/_6sdp"
                                        android:src="@drawable/small_sterring" />


                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:includeFontPadding="false"
                                    android:text="@string/select_driver"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp" />
                            </LinearLayout>


                            <RelativeLayout
                                android:id="@+id/rltvCarSelect"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:background="@drawable/field_border"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="@dimen/_10sdp">

                                <TextView
                                    android:id="@+id/txtdriver"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/img_down_arrow"
                                    android:fontFamily="@font/poppins_regular"
                                    android:hint="@string/select_driver"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/view_grey"
                                    android:textSize="@dimen/_12ssp" />


                                <ImageView

                                    android:id="@+id/img_down_arrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:src="@drawable/ic_down_arrow" />


                            </RelativeLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="@dimen/_1sdp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/circle_bg"
                                    android:backgroundTint="@color/view_grey5">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="@dimen/_6sdp"
                                        android:src="@drawable/ic_car" />


                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:includeFontPadding="false"
                                    android:text="@string/select_car_for_ride"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp" />
                            </LinearLayout>


                            <RelativeLayout
                                android:id="@+id/rltvRideSelect"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:background="@drawable/field_border"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="@dimen/_10sdp">

                                <TextView
                                    android:id="@+id/txtRider"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/img_down_arrow2"
                                    android:fontFamily="@font/poppins_regular"
                                    android:hint="@string/select_car"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/view_grey"
                                    android:textSize="@dimen/_12ssp" />


                                <ImageView
                                    android:id="@+id/img_down_arrow2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:src="@drawable/ic_down_arrow" />


                            </RelativeLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/img_down_arrow"
                                    android:fontFamily="@font/poppins_regular"
                                    android:includeFontPadding="false"
                                    android:text="@string/milage"
                                    android:textColor="@color/view_grey"
                                    android:textSize="@dimen/_11ssp" />

                                <TextView
                                    android:id="@+id/txtMilage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_toLeftOf="@+id/img_down_arrow"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:includeFontPadding="false"
                                    android:text="0 KM"
                                    android:textColor="@color/view_black"

                                    android:textSize="@dimen/_11ssp" />


                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="@dimen/_1sdp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llGps"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_33sdp"
                                    android:src="@drawable/ic_location" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="@string/start_gps_trip"
                                    android:textColor="@color/view_grey"
                                    android:textSize="@dimen/_10ssp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llMenual"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_33sdp"
                                    android:src="@drawable/ic_manual_location" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="@string/manual_trip"
                                    android:textColor="@color/view_grey"
                                    android:textSize="@dimen/_10ssp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llTripHistory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_33sdp"
                                    android:src="@drawable/ic_history" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="@string/trip_history"
                                    android:textColor="@color/view_grey"
                                    android:textSize="@dimen/_10ssp" />

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="@dimen/_1sdp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llPriceCalculator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_33sdp"
                                    android:src="@drawable/ic_calc" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="@string/price_calculator"
                                    android:textColor="@color/view_grey"
                                    android:textSize="@dimen/_10ssp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llSettings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_33sdp"
                                    android:src="@drawable/ic_setting" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="@string/settings"
                                    android:textColor="@color/view_grey"
                                    android:textSize="@dimen/_10ssp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_33sdp"
                                    android:src="@drawable/ic_download" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="@string/export_log"
                                    android:textColor="@color/view_grey"
                                    android:textSize="@dimen/_10ssp" />

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_190sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvselectdriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardRider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_310sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvselectrider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
