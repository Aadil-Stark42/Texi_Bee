<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activitys.auth.LoginActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/city_bee_text_logo" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/edt_field_border"

                    android:drawableLeft="@drawable/ic_profile"
                    android:drawablePadding="@dimen/_10sdp"

                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/DriverName"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/view_black"
                    android:textColorHint="@color/view_grey2"
                    android:textSize="@dimen/_11ssp" />

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/edt_field_border"
                    android:drawableLeft="@drawable/ic_mail"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/view_black"
                    android:textColorHint="@color/view_grey2"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/btn_border"
                android:backgroundTint="@color/view_main_color"
                android:elevation="0dp"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:padding="@dimen/_3sdp"
                android:text="@string/Login"
                android:textAllCaps="false"
                android:textColor="@color/view_black"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</layout>
